= simple_form_for(@post, html: { class: 'form-horizontal'}) do |f|
	
	= f.input :image, label: "Image", input_html: { class: "form-control" }, required: true
	= f.input :title, label: "Inspiration Title", input_html: { class: "form-control" }, required: true
	= f.input :link, label: "Link to Inspiration", input_html: { class: "form-control" }
	= f.input :description, label: "Description", input_html: { class: "form-control" }, required: true
	%br/
	= f.button :submit
	= link_to "Cancel", root_path, class: "btn btn-default"
